<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoLogin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoLogin.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            overflow-x: hidden;
        }

        .navbar-custom {
            background-color: #007bff; /* Azul similar al de la imagen */
        }

        .sidebar {
            min-height: 100vh;
            background-color: #343a40; /* Gris oscuro */
            padding: 15px;
            color: white;
            transition: width 0.3s, padding 0.3s;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar.collapsed {
                width: 60px;
                overflow: hidden;
                padding: 15px 0;
            }

            .sidebar .nav-item {
                margin-bottom: 10px;
            }

            .sidebar .nav-link {
                color: white;
                display: flex;
                align-items: center;
            }

                .sidebar .nav-link i {
                    margin-right: 10px;
                }

            .sidebar.collapsed .nav-link i {
                margin-right: 0;
            }

            .sidebar .nav-link:hover {
                background-color: #495057;
                color: white;
            }

            .sidebar .user-info {
                text-align: center;
                margin-bottom: 20px;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .sidebar.collapsed .user-info {
                display: none;
            }

            .sidebar.collapsed .logo {
                display: none;
            }

            .sidebar.collapsed .nav-link span {
                display: none;
            }

            .sidebar .user-info img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                margin-bottom: 10px;
            }

            .sidebar .logo img {
                width: 150px;
                height: 150px;
                margin-bottom: 10px;
                display: block;
                margin-left: auto;
                margin-right: auto;
            }

        .toggle-sidebar-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }

        .content {
            transition: margin-left 0.3s;
            margin-left: 250px; /* Initial width of the sidebar */
        }

            .content.collapsed {
                margin-left: 60px;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-custom">
            <div class="container-fluid d-flex justify-content-between">
                <button class="navbar-toggler toggle-sidebar-btn" type="button" onclick="toggleSidebar()">☰</button>
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesión</a>
            </div>
        </nav>
    </header>
    <div class="d-flex">
        <div class="sidebar d-flex flex-column align-items-start" id="sidebar">
            <div class="logo">
                <img src="~/img/images.jpeg" alt="Logo Notaría">
            </div>
            <div class="user-info">
                <p>Bienvenido @ViewData["nombreUsuario"]</p>
            </div>
            <nav class="nav flex-column">
                <a class="nav-link" href="#"><i class="fas fa-home"></i><span class="ml-2">Home</span></a>
                <a class="nav-link" href="#"><i class="fas fa-file-alt"></i><span class="ml-2">Documentación</span></a>
                <a asp-area="" asp-controller="Materializacion" asp-action="Materializacion" class="nav-link"><i class="fas fa-file-alt"></i><span class="ml-2">Materialización</span></a>
            </nav>
        </div>
        <div class="content flex-grow-1 p-3" id="content">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ProyectoLogin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('collapsed');
            document.getElementById('content').classList.toggle('collapsed');
        }
    </script>
</body>
</html>
